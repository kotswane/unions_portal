@model CompliancePortal.Models.AccountViewModels.LoginViewModel

@{
    ViewData["Title"] = "Log in";
}

<p class="login-box-msg">Sign in to start your session</p>
<form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
    <div>
        <label asp-for="Email"></label>
        <div class="input-group mb-3">
            <input asp-for="Email" type="email" value="" class="form-control" placeholder="Email" />
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-envelope"></span>
                </div>
            </div>
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Password"></label>
        <div class="input-group mb-3">
            <input asp-for="Password" type="password" value="" class="form-control" placeholder="Password" />
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                </div>
            </div>
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-8">
            <div class="icheck-primary">
                <input type="checkbox" asp-for="RememberMe" id="remember">
                <label for="remember">
                    Remember Me
                </label>
            </div>
        </div>
        <div class="col-4">
            <button type="submit" id="btnUserLogin" onclick="" class="btn btn-primary btn-block">Sign In</button>
        </div>
    </div>
    <br /><br />
    <a asp-action="ForgotPassword" class="">Forgot Password</a><br>
    <!--<a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="text-center">Register a new membership</a> -->
    <span class="text-danger">@Html.ValidationSummary(false)</span>
</form>

<!--<script src="~/js/GetGeolocation.js"></script> -->
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        //$("#btnUserLogin").trigger('click');
        var result = "@ViewBag.IsLoginSucceeded";
        if (result != '')
            toastr.error("@ViewBag.IsLoginSucceeded");

        $(document).ready(function () {
            GetGeolocation();
        });
    </script>
}

