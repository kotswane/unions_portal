@model CompliancePortal.Models.AccountViewModels.LoginViewModel;
@inject CompliancePortal.Data.ApplicationDbContext context;
@using Microsoft.Extensions.Options;
@inject IOptions<CompliancePortal.Models.CommonViewModel.ApplicationInfo> _ApplicationInfo;

@{ UserProfile profile = context.UserProfile.SingleOrDefault(x => x.ApplicationUserId.Equals(Model.Id));


<nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <ul class="navbar-nav">
        <li class="nav-item" style="border-bottom: none;">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
    </ul>
    <ul class="navbar-nav ml-auto">
      <li class="logginuser">
              Welcome,   <a href="@Url.Action("Index", "UserProfile")" class="">
                    @profile.FirstName @profile.LastName
                </a>
      </li>
        <li>
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                <input type="hidden" asp-for="Longitude" id="Longitude" />
                <input type="hidden" asp-for="Latitude" id="Latitude" />
                <div class="form-group pull-right" style="margin:10px;">
                    <button type="submit" onclick="SendGeolocation()" class="btn btn-danger btn-xs">Sign out</button>
                </div>
            </form>
        </li>
    </ul>
</nav>
}
